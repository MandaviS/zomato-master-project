FROM node:alpine

WORKDIR /app
COPY ./package.json ./
RUN npm install
COPY . ./


ENV MONGO_URL
ENV GOOGLE_CLIENT_ID 
ENV GOOGLE_CLIENT_SECRET
ENV AWS_S3_ACCESS_KEY 
ENV AWS_S3_SECRET_KEY
ENV RZR_PAY_ID 
ENV RXR_PAY_SECRET 
ENV NODE_ENV=production
ENV PORT=4000

RUN npm run build


CMD ["npm", "run", "start"]